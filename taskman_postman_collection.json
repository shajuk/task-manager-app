{
  "info": {
    "name": "Task Manager API",
    "_postman_id": "task-manager-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"alice\", \"password\": \"password\"}"
        },
        "url": {
          "raw": "https://localhost:8443/auth/register",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"alice\", \"password\": \"password\"}"
        },
        "url": {
          "raw": "https://localhost:8443/auth/login",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "https://localhost:8443/api/tasks",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "api",
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Test task\", \"description\": \"from postman\"}"
        },
        "url": {
          "raw": "https://localhost:8443/api/tasks",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "api",
            "tasks"
          ]
        }
      }
    }
  ]
}